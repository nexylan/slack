{
    "name": "nexylan/slack",
    "description": "A simple PHP package for sending messages to Slack, with a focus on ease of use and elegant syntax.",
    "type": "library",
    "keywords": ["slack", "webhook"],
    "license": "MIT",
    "authors": [
        {
            "name": "maknz",
            "email": "github@mak.geek.nz"
        },
        {
            "name": "Sullivan SENECHAL",
            "email": "soullivaneuh@gmail.com"
        }
    ],
    "require": {
        "php": "^7.4 || ^8.0",
        "ext-mbstring": "*",
        "psr/http-client": "^1.0",
        "psr/http-factory": "^1.0",
        "psr/http-message": "^1.0",
        "symfony/options-resolver": "^3.4 || ^4.0 || ^5.0 || ^6.0"
    },
    "require-dev": {
        "guzzlehttp/psr7": "^1.4",
        "mockery/mockery": "^1.4",
        "nyholm/psr7": "^1.1",
        "php-http/discovery": "^1.7",
        "php-http/httplug": "^2.0",
        "php-http/message": "^1.6",
        "php-http/mock-client": "^1.3"
    },
    "suggest": {
        "nexylan/slack-bundle": "Required for Symfony bundle support"
    },
    "autoload": {
        "psr-4": {
            "Nexy\\Slack\\": "src/"
        }
    },
    "config": {
        "sort-packages": true
    }
}
