{
    "name": "nexylan/slack",
    "description": "A simple PHP package for sending messages to Slack, with a focus on ease of use and elegant syntax.",
    "type": "library",
    "keywords": ["slack"],
    "license": "MIT",
    "authors": [
        {
            "name": "maknz",
            "email": "github@mak.geek.nz"
        },
        {
            "name": "Sullivan SENECHAL",
            "email": "soullivaneuh@gmail.com"
        }
    ],
    "require": {
        "php": "^7.1",
        "ext-mbstring": "*",
        "guzzlehttp/guzzle": "^6.0 || ^5.0 || ^4.0"
    },
    "require-dev": {
        "mockery/mockery": "^1.0"
    },
    "suggest": {
        "maknz/slack-laravel": "Required for Laravel support",
        "nexylan/slack-bundle": "Required for Symfony bundle support"
    },
    "autoload": {
        "psr-4": {
            "Nexy\\Slack\\": "src/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-master": "2.x-dev"
        }
    }
}
